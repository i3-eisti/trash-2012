<Window xmlns:my="clr-namespace:Trash2012.Visual" x:Class="Trash2012.Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trash2012"
        Loaded="Trash2012_Loaded" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid 
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="ToolBar" Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <Button Content="Quitter" />
        </StackPanel>

        <my:Timeline Grid.Row="1"
            x:Name="GameTimeline"
            Margin="5" />
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <my:Dashboard 
                x:Name="GameDashboard"
                Grid.Column="0"
                Grid.RowSpan="2"
                HorizontalAlignment="Left"
                Margin="5"/>
            
            <my:Map 
                x:Name="MyMap" 
                Margin="5"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Height="380" Width="380"/>
            
            <Button 
                Name="bNextDay"
                Content="Jour Suivant"
                Grid.Row="1"
                Grid.Column="1" 
                HorizontalAlignment="Center" Click="bNextDay_Click" />
            
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Vertical">
            
            <TabControl 
                x:Name="Tabs" Margin="5">
                
                <TabItem Header="Boutique">
                    <StackPanel 
                        Margin="8"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                        
                        <my:ShopItem
                            Source="/Trash2012;component/Resources/truck.png"
                            Text="Camion recycleur de papier"
                            Price="250"
                            BuyHandler="TruckShopItemHandler"
                            Style="{StaticResource ShopButton}" />
                        
                    </StackPanel>
                </TabItem>
                
                <TabItem Header="Entreprise">
                    
                </TabItem>
                
            </TabControl>
        </StackPanel>


    </Grid>
</Window>
