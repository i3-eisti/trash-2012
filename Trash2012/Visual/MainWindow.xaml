<Window xmlns:my="clr-namespace:Trash2012.Visual" x:Class="Trash2012.Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trash2012" Icon="/Trash2012;component/Resources/icon.png"
        Width="Auto" Height="680"
        WindowStartupLocation="CenterScreen"
        Loaded="Trash2012_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Canvas>
        <Grid Name="RootGrid" Canvas.Top="0" Canvas.Left="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="400" />
                <RowDefinition  />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Name="ToolBar" Grid.Row="0" Orientation="Horizontal" Background="LightGray">
                <Button Content="Quitter" />
            </StackPanel>

            <my:Timeline Grid.Row="1"
            x:Name="YearTimeline"
            Margin="5" />

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <my:Dashboard 
                x:Name="GameDashboard"
                Grid.Column="0" 
                Margin="5"/>

                <StackPanel Name="MyButtonsPanel" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom" Margin="5">
                    <Button Name="NextRoundButton" Content="Jouer" Height="30" Click="NextRoundButton_Click" />
                </StackPanel>

                <my:Map 
                x:Name="MyMap" 
                Grid.Column="2"
                Margin="5"
                HorizontalAlignment="Right"
                Height="380" Width="380"/>

            </Grid>

            <StackPanel Grid.Row="3" Orientation="Vertical">

                <TabControl 
                x:Name="Tabs" VerticalAlignment="Stretch" Margin="5">

                    <TabItem Header="Boutique">
                        <StackPanel 
                        Margin="8"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Center">

                            <my:ShopItem
                            Source="/Trash2012;component/Resources/truck.png"
                            Text="Camion recycleur de papier"
                            Price="250"
                            BuyHandler="TruckShopItemHandler"
                            Style="{StaticResource ShopButton}"/>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Entreprise">

                    </TabItem>

                </TabControl>
            </StackPanel>


        </Grid>
        
        
        <!--<Grid Name="StartGrid" Canvas.Top="0" Canvas.Left="0">
            <Button Name="bStart"
                Content="Nouvelle Partie" />
        </Grid>-->
    </Canvas>
    
</Window>
