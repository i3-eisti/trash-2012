<UserControl x:Class="Trash2012.Visual.Tips"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="160" Visibility="Collapsed">
    <Grid VerticalAlignment="Center">
        <Border Background="#FFBEDBFC" BorderThickness="2" BorderBrush="#FF5F5FFF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"  Content="Quantité de déchets : "/>
                <TextBlock Grid.Column="1" Name="QuantitePoubelle" VerticalAlignment="Center"  TextWrapping="Wrap"  Text="10"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
